doctype html
html
  head
    title Kết quả thanh toán
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    style.
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        background-color: #f3f4f6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
      }
      .icon {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      .success { color: #10b981; } /* Màu xanh */
      .error { color: #ef4444; }   /* Màu đỏ */

      h2 { margin: 0 0 0.5rem 0; color: #1f2937; }
      p.msg { color: #6b7280; margin-bottom: 1.5rem; }

      .detail-box {
        background: #f9fafb;
        border-radius: 8px;
        padding: 1rem;
        text-align: left;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
      }
      .row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
      }
      .row:last-child { margin-bottom: 0; }
      .label { color: #6b7280; }
      .value { font-weight: 600; color: #374151; }

      .btn {
        display: inline-block;
        background-color: #2563eb;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.2s;
        width: 100%;
        box-sizing: border-box;
      }
      .btn:hover { background-color: #1d4ed8; }

  body
    .card
      if isSuccess
        div.icon.success
          | ✅
        h2 Thanh toán thành công!
      else
        div.icon.error
          | ❌
        h2 Thanh toán thất bại!

      p.msg #{message}

      .detail-box
        .row
          span.label Mã giao dịch:
          span.value #{transId}
        .row
          span.label Nội dung:
          span.value #{orderInfo}
        if amount
          .row
            span.label Số tiền:
            span.value #{new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount)}

      a.btn(href="/") Quay về trang chủ
